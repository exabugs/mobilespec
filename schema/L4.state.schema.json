{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:mobilespec:L4.state",
  "title": "State & Data Contract Schema (L4)",
  "type": "object",
  "required": ["screen"],
  "additionalProperties": false,
  "properties": {
    "screen": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^screen_[a-z][a-z0-9_]*$"
        },

        "states": {
          "type": "array",
          "items": { "$ref": "#/$defs/state" }
        },

        "data": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "queries": {
              "type": "object",
              "additionalProperties": { "$ref": "#/$defs/apiCall" },
              "default": {}
            },
            "mutations": {
              "type": "object",
              "additionalProperties": { "$ref": "#/$defs/apiCall" },
              "default": {}
            }
          }
        },

        "events": {
          "type": "object",
          "description": "L2.transition.id をキーにしたイベント定義",
          "propertyNames": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "additionalProperties": { "$ref": "#/$defs/event" }
        },

        "conditions": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "default": {}
        }
      }
    }
  },

  "$defs": {
    "state": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^state_[a-z][a-z0-9_]*$" },
        "name": { "type": "string" },
        "initial": { "type": "boolean", "default": false }
      }
    },

    "apiCall": {
      "type": "object",
      "required": ["operationId"],
      "additionalProperties": false,
      "properties": {
        "operationId": { "type": "string", "minLength": 1 },
        "selectRoot": { "type": "string", "default": "$.data" },

        "params": { "type": "object", "additionalProperties": true },
        "select": { "type": "object", "additionalProperties": true },

        "invalidate": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    },

    "event": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "targetScreenId"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "navigate" },
            "targetScreenId": { "type": "string", "minLength": 1 },
            "params": { "type": "object", "additionalProperties": true }
          }
        },
        {
          "type": "object",
          "required": ["type", "target"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "refetch" },
            "target": { "type": "string", "minLength": 1 }
          }
        },
        {
          "type": "object",
          "required": ["type", "patch"],
          "additionalProperties": false,
          "properties": {
            "type": { "const": "setState" },
            "patch": { "type": "object", "additionalProperties": true }
          }
        }
      ]
    }
  }
}
